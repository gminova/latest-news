<div class="block">
    <h1 class="main__title">Log in</h1>
    <form class="login__form" action="login" method="POST">
        <label for="login__username">Username:
            <br>
            <input class="form__input" id='login__username' type="text" name='username' minlength="4" maxlength="15"required>
        </label>
        <p>{{ message }}</p>
        <label>
        <label for="login__password">Password:
            <br>
            <input class="form__input" id='login__password' type="password" name='password' minlength="5" maxlength="15" required>
        </label>
        <br>
        <button class="section--options__login">Log in</button>
    </form>
</div>